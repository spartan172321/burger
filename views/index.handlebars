<h1>EAT-DA-BURGER!</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-5 col-md-4">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="text" name="burger_name" value="{{this.burger_name}}" readonly>
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul> 
    </div>
    <div class="col-sm-5 col-md-4">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="text" name="burger_name" value="{{this.burger_name}}" readonly>
                <input type="hidden" name="devoured" value="false">
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul> 
    </div>
  </div>
</div>


<h2>Add a Burger</h2>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-6">
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
      
    </div>
  </div>
</div>

