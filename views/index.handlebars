<h1 class="text-center">EAT-DA-BURGER!</h1>

<img src="http://www.myiconfinder.com/uploads/iconsets/256-256-712c55fa0cd7192cafd33f43fb022ab9-burger.png" class="img-responsive center-block" alt="Burger image">

<div class="container">
  <div class="row">
    <div class="col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-2">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="text" name="burger_name" value="{{this.id}}. {{this.burger_name}}" readonly>
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul> 
    </div>
    <div class="col-sm-5 col-md-5">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="text" name="burger_name" value="{{this.id}}. {{this.burger_name}}" readonly>
                <input type="hidden" name="devoured" value="false">
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul> 
    </div>
  </div>
</div>


<h2 class="text-center">Add a Burger</h2>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <form class="create-update-form" action="/" method="POST">
        <label for="ca">Burger Name:</label>
        <textarea class="form-control" id="ca" name="burger_name" rows="3"></textarea>
        <br>
        <button class="btn-lg btn-primary center-block" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>

